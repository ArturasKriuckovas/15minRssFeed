<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/web_title"
        android:textStyle="bold"
        android:text="Some Kind of text"
        android:textSize="15sp"
        android:paddingLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/web_publication_date"
        android:layout_below="@+id/web_title"
        android:text="somedatetextexample"
        android:textColor="#6c76f7"
        android:paddingLeft="10sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/section_name"
        android:layout_toRightOf="@+id/web_publication_date"
        android:layout_below="@id/web_title"
        android:text="Section name"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"/>

</RelativeLayout>